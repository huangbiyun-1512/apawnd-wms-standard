<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.3.2.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>com.example</groupId>
    <artifactId>poc-domain</artifactId>
    <version>1.${revision}</version>
    <packaging>pom</packaging>

    <name>poc-domain</name>
    <description>Demo project for Spring Boot</description>

    <modules>
        <module>poc-api</module>
        <module>poc-provider</module>
    </modules>

    <properties>
        <java.version>11</java.version>
        <revision>0.1-RELEASE</revision>

        <springdoc.openapi.ui.version>1.4.3</springdoc.openapi.ui.version>

        <poc.components.version>1.0.1-RELEASE</poc.components.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springdoc</groupId>
                <artifactId>springdoc-openapi-ui</artifactId>
                <version>${springdoc.openapi.ui.version}</version>
            </dependency>

            <dependency>
                <groupId>com.example</groupId>
                <artifactId>poc-api</artifactId>
                <version>1.${revision}</version>
            </dependency>

            <dependency>
                <groupId>com.example</groupId>
                <artifactId>poc-components</artifactId>
                <version>${poc.components.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <distributionManagement>
        <repository>
            <id>maven-local-releases</id>
            <name>releases</name>
            <url>http://localhost:8081/repository/maven-local-releases/</url>
        </repository>
        <snapshotRepository>
            <id>maven-local-snapshots</id>
            <name>snapshots</name>
            <url>http://localhost:8081/repository/maven-snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>maven-local-releases</id>
            <name>releases</name>
            <url>http://localhost:8081/repository/maven-local-releases/</url>
        </repository>
        <repository>
            <id>maven-central</id>
            <name>central</name>
            <url>http://localhost:8081/repository/maven-central/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>org.springdoc</groupId>
            <artifactId>springdoc-openapi-ui</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <configuration>
                    <updatePomFile>true</updatePomFile>
                    <flattenMode>resolveCiFriendliesOnly</flattenMode>
                </configuration>
                <executions>
                    <execution>
                        <id>flatten</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>flatten</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>flatten.clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
